##Trimmomatic
for filename in *fastq.gz
do
base=$(basename $filename .fastq.gz)
echo $base
trimmomatic SE ${base}.fastq.gz \
ILLUMINACLIP:truseq.fa:2:35:10 \
LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:101
done

##STAR
#Indexing reference genome
STAR --runThreadN 4 \
--runMode genomeGenerate \
--genomeDir /share/rwmwork/nhamada/ref \
--genomeFastaFiles /share/rwmwork/nhamada/ref/TAIR10_chr_all.fas \
--sjdbGTFfile /share/rwmwork/nhamada/ref/TAIR10_GFF3_genes.gff \
--sjdbOverhang 99


